---
import Button from "../component/ButtonSub"
interface Props {
    title: string
    content: string
    imagen: string

    

}
const {title, content, imagen} =  Astro.props 
---



<div class="flex flex-col p-6 bg-black rounded-md my-7 mx-5 items-center">
    <img class="w-[100px] items-center" src={imagen}alt="">
    <h1 class="text-xl uppercase">{title}</h1>
    <p class="my-8">{content}</p>
    <Button client:visible/>
    
</div>